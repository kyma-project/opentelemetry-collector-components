{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScopeDisabled"
  ],
  "labels": [
    "area/dependency",
    "kind/chore"
  ],
  "commitMessageAction": "Bump",
  "kustomize": {
    "enabled": false
  },
  "dockerfile": {
    "enabled": false
  },
  "helm-values": {
    "enabled": false
  },
  "github-actions": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchCategories": [
        "golang"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "matchDatasources": [
        "golang-version"
      ],
      "enabled": true
    },
    {
      "matchCategories": [
        "golang"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "schedule": "every month",
      "enabled": false
    },
    {
      "matchCategories": [
        "golang",
        "go"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    }
  ]
}
