{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScopeDisabled"
  ],
  "labels": [
    "area/dependency",
    "kind/chore"
  ],
  "commitMessageAction": "Bump",
  "kustomize": {
    "enabled": false
  },
  "dockerfile": {
    "enabled": true
  },
  "helm-values": {
    "enabled": false
  },
  "github-actions": {
    "enabled": false
  },
  "golang": {
    "postUpdateOptions": [
      "gomodTidy"
    ],
    "packageRules": [
      {
        "matchDatasources": [
          "golang-version"
        ],
        "enabled": true
      },
      {
        "matchUpdateTypes": [
          "digest"
        ],
        "schedule": "every month",
        "enabled": false
      },
      {
        "matchLanguages": [
          "go"
        ]
      }
    ]
  }
}